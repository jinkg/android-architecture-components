<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kinglloy.android.contentprovidersample">

    <permission android:name="com.kinglloy.android.contentprovidersample.provider.READ_WRITE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.SampleContentProvider"
            android:authorities="com.kinglloy.android.contentprovidersample.provider"
            android:exported="true"
            android:permission="com.kinglloy.android.contentprovidersample.provider.READ_WRITE" />
    </application>

</manifest>